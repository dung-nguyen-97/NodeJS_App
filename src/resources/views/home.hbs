<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card">
                <img class="card-img-top" style="width: 350px; height: 182px" src={{this.image}} alt={{this.name}}>
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/course/{{this.slug}}" class="btn btn-primary">Chi tiết khóa học</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>